{
	"useEmoji": true,
	"emojiAlign": "left",
	"alias": {
		"ai": ":hammer: chore: add .gitignore",
		"al": ":hammer: chore: add LICENSE",
		"ar": ":memo: docs: add README.md",
		"ft": ":bug: fix: fix typos",
		"ui": ":hammer: chore: update .gitignore",
		"um": ":hammer: chore: update .gitmodules",
		"ur": ":memo: docs: update README.md"
	},
	"typesAppend": [
		{ "value": "*!", "name": "*!:       BREAKING CHANGES", "emoji": ":heavy_exclamation_mark:" },
		{ "value": "comments", "name": "comments: Add comments to the code", "emoji": ":speech_balloon:" },
		{ "value": "config", "name": "config:   Changes in project configuration", "emoji": ":gear:" },
		{ "value": "deps", "name": "deps:     Update dependencies", "emoji": ":package:" },
		{ "value": "error", "name": "error:    Handle errors or warnings", "emoji": ":rotating_light:" },
		{ "value": "files", "name": "files:    Changes in files or directories", "emoji": ":file_folder:" },
		{ "value": "merge", "name": "merge:    Merge branch or pull request", "emoji": ":twisted_rightwards_arrows:" },
		{ "value": "remove", "name": "remove:   Remove obsolete code", "emoji": ":wastebasket:" },
		{ "value": "revert", "name": "revert:   Revert a previous commit", "emoji": ":rewind:" },
		{ "value": "security", "name": "security: Address security vulnerabilities", "emoji": ":shield:" },
		{ "value": "ux", "name": "ux:       Improve user experience", "emoji": ":art:" },
		{ "value": "workflow", "name": "workflow: Workflow changes", "emoji": ":arrows_counterclockwise:" }
